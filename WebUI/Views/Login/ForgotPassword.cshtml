@model EntityLayer.Entities.AppUser
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Şifremi Unuttum</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/form-v6.jpg" alt="form" style="width:484px; height:650px">
			</div>
			<form class="form-detail" method="post">
				<h2>Şifremi Unuttum Sayfası</h2>
				<div class="form-row">
					<input type="text" id="full-name" asp-for="UserName" class="input-text" placeholder="Kullanıcı Adınız" required>
				</div>
				<div class="form-row">
					<input type="password" id="password" asp-for="PasswordHash" class="input-text" placeholder=" Yeni Şifreniz" required>
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Şifremi Değiştir">
				</div>
			</form>
		</div>
	</div>
</body>
</html>
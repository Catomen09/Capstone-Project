@model WebUI.Dtos.IdentityDtos.LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Admin Paneline Giriş Sayfası</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/form-v6.jpg" alt="form" style="width:484px; height:650px">
			</div>
			<form class="form-detail" method="post">
				<h2>Giriş Sayfası</h2>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" placeholder="Kullanıcı Adınız" asp-for="Username" required>
					
				</div>
				<div class="form-row">
					<input type="password" asp-for="Password" id="password" class="input-text" placeholder="Şifreniz" required>
					
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Giriş Yap">
					<a href="/Register/Index" class="register">Kayıt Ol</a>
					<button type="button" class="forgot-password" onclick="forgotPassword()">Şifremi Unuttum</button>

				</div>
			</form>
			<script>
				// Şifremi Unuttum butonuna tıklandığında çalışacak JavaScript fonksiyonu
				function forgotPassword() {
					// Kullanıcı adını al
					var username = document.getElementById('full-name').value;
					// Şifremi unuttum sayfasına yönlendir, kullanıcı adını query string olarak ekleyerek
					window.location.href = '/Login/ForgotPassword?username=' + username;
				}
			</script>
		</div>
	</div>
</body>
</html>
